<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e728f"
    tools:context=".MeditationNapTime">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_gravity="center"
        tools:context=".MeditationNapTime">

        <WebView
            android:id="@+id/nightskywebview"
            android:layout_width="158dp"
            android:layout_height="158dp"
            android:layout_gravity="center_horizontal"
            />
        <WebView
            android:id="@+id/sleepyduckwebview"
            android:layout_width="158dp"
            android:layout_height="158dp"
            android:paddingLeft="30dp"
            android:layout_gravity="right"
            android:layout_above="@+id/frameLayout"
            android:layout_centerHorizontal="true" />
        <WebView
            android:id="@+id/pusheensleep"
            android:layout_width="158dp"
            android:layout_height="158dp"
            android:paddingLeft="30dp"
            android:layout_gravity="right"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/frameLayout"
            android:layout_alignEnd="@+id/frameLayout" />
        <!-- The primary full-screen view. This can be replaced with whatever view
             is needed to present your content, e.g. VideoView, SurfaceView,
             TextureView, etc. -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:layout_gravity="center_horizontal|top"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pusheensleep"
            android:id="@+id/frameLayout">

            <LinearLayout
                android:id="@+id/fullscreen_content_controls"
                style="?metaButtonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@color/black_overlay"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

            </LinearLayout>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music On:"
                android:id="@+id/checkBox"
                android:textSize="22sp"
                android:checked="true"
                android:layout_gravity="center_horizontal|top"
                android:layout_below="@+id/fullscreen_content"
                />

            <TextView
                android:id="@+id/fullscreen_content"
                android:layout_width="618dp"
                android:layout_height="234dp"
                android:gravity="center"
                android:keepScreenOn="true"
                android:text="\n\nRelax to the sound of soothing music...\n\nEnjoy your relaxation time to be used for meditating, napping, reading, whatever you want! :)"
                android:textColor="#f9e990"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal|top" />

            <Button
                android:id="@+id/go_back_fullscreen"
                style="?metaButtonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.15"
                android:textColor="@color/colorWhite"
                android:text="Go Back"
                android:layout_gravity="center" />


        </FrameLayout>

    </RelativeLayout>


</FrameLayout>
